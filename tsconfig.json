{
	"compilerOptions": {
		"target": "es5",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@src/*": [
				"./src/*"
			],
			"@modules/*": [
				"./src/modules/*"
			],
			"@components/*": [
				"./src/components/*"
			],
			"@utils/*": [
				"./src/utils/*"
			],
			"@configuration/*": [
				"./src/configuration/*"
			],
			"@services/*": [
				"./src/services/*"
			],
			"@types/*": [
				"./src/@types/*"
			],
			"@hooks/*": [
				"./src/hooks/*"
			],
			"@pages/*": [
				"./src/pages/*"
			],
			"@themes/*": [
				"./src/themes/*"
			]
		},
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx"
	],
	"exclude": [
		"node_modules"
	]
}